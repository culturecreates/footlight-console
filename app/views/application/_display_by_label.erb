<% show_controls = has_manual_source_available(stat) ? true : false if show_controls  %>
<% if stat['label'] == "Photo"||  stat['label'] == "Image" %>
  <figure class="image is-<%= image_ratio %>">
    <img  style='max-height:800px; width: auto' src="<%= image_helper image_ratio, stat['value'] %>">
  </figure>
<% elsif stat['label'] == "Dates"  %>
  <%= render partial: "calendar", locals:{ stat: stat, show_controls: show_controls } %>
<% elsif stat['datatype'] == "xsd:anyURI" %>
  <%= render partial: "linked_statement", locals:{stat: stat} %>
<% elsif stat['datatype'] == "xsd:duration" %>
  <%= build_duration_array(stat['value']) %>
<% else %> 
  <%= display_statement(stat['value']) %>  
<% end %>