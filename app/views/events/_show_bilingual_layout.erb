      </div>
    <div class="columns">
      <div class="column statement">
        <%= render partial: 'statement', locals: {stat: @event["performed_by"]} %>
      </div>
      <div class="column  statement">
        <%= render partial: 'statement', locals: {stat: @event["organized_by"]} %>
      </div>
    </div>

