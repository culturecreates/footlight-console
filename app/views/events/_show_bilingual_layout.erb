    <div class="columns">
      <div class="column  statement">
        <%= render partial: 'statement', locals: { stat: @event["worked_performed"]} %>
      </div>
      <div class="column  statement">
        <%= render partial: 'statement', locals: {stat: @event["produced_by"]} %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="column is-one-half statement">
    <%= render partial: 'statement', locals: {stat: @event["photo"]} %>
  </div>
</div>

<div class="columns">
  <div class="column  is-one-half  statement">
