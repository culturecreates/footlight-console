
<% if is_francophone_event @event  %>
    <% if @iframe_url %>
      <%= render partial: "show_layout_iframe", locals: {lang: 'fr'} %>
    <% else %>
      <%= render partial: "show_layout", locals: {lang: 'fr'} %>
    <% end %>
<% elsif is_bilingual_event @event  %>
  <%= render partial: "show_bilingual_layout" %>
<% else %>
  <% if @iframe_url %>
    <%= render partial: "show_layout_iframe", locals: {lang: 'en'} %>
  <% else %>
    <%= render partial: "show_layout", locals: {lang: 'en'} %>
  <% end %>
<% end %>

