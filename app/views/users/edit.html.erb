<% provide(:title, "Edit user") %>
<div class="fullscreen">
  <div class="container">
  <div class="columns  is-centered">
    <div class="column is-one-third ">
      <h1 class="title is-centered">Update your profile</h1>
      <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="field">
          <%= f.label :name, class: 'label' %>
          <%= f.text_field :name, class: 'input' %>
        </div>

        <div class="field">
          <%= f.label :email, class: 'label' %>
          <%= f.email_field :email, class: 'input' %>
        </div>

        <div class="field">
          <%= f.label :password, class: 'label' %>
          <%= f.password_field :password, class: 'input' %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation, "Confirmation", class: 'label' %>
          <%= f.password_field :password_confirmation, class: 'input' %>
        </div>
        <center>
          <%= f.submit "Save changes", class: "button is-primary is-large" %>
        </center>
      <% end %>
    </div>
  </div>
  </div>
</div>
