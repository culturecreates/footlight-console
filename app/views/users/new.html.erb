<% provide(:title, 'Sign up') %>

<div class="fullscreen">
  <div class="columns is-centered">
    <div class="column is-one-third">
      <h1 class="title">Sign up</h1>
      <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="field">
          <%= f.label :name, class: 'label' %>
          <%= f.text_field :name, class: 'input' %>
        </div>

        <div class="field">
          <%= f.label :email, class: 'label' %>
          <%= f.email_field :email, class: 'input' %>
        </div>

        <div class="field">
          <%= f.label :password, class: 'label' %>
          <%= f.password_field :password, class: 'input' %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Confirmation", class: 'label' %>
          <%= f.password_field :password_confirmation, class: 'input' %>
        </div>
        <center>
          <%= f.submit "Create my account", class: "button is-primary is-large" %>
        </center>
      <% end %>

      <br>
      <br>
      <center>
        <p>Already a member? <%= link_to "Login", login_path %></p>
        <%= link_to "Forgot password", new_password_reset_path %>
      </center>
    </div>
  </div>
</div>
