
<% if current_user.admin? %>
  <% @user ||= current_user %>
  <div class="stats">
    <a href="<%= following_user_path(@user) %>">
      <strong id="following" class="stat button">
        <%= @user.following.count %>
      </strong>
      following
    </a>
    <a href="<%= followers_user_path(@user) %>">
      <strong id="followers" class="stat button">
        <%= @user.followers.count %>
      </strong>
      followers
    </a>
  </div>
<% end %>