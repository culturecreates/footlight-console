<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="notification is-danger">
      <p class="is-size-4">  The form contains <%= pluralize(object.errors.count, "error") %> </p>
      <ul>
        <% object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <br>
  </div>

<% end %>
